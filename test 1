import tkinter as tk

def recommencer():
    """renvoie sur la première fenêtre pour recommencer la partie"""
    fenetrevictoire.mainloop()

# Fonction appelée qd on clique sur le bouton "Arrêter de jouer"
def stopjeu():
        print("Arrêt du jeu")
        fenetrevictoire.quit()

fenetrevictoire = tk.Tk() # Création de la fenêtre victoire
labelfenetrevictoire = tk.Label(fenetrevictoire, text="Bravo tu as gagné !", font = ("helvetica", "30"), bg= )
labelfenetrevictoire.grid() # positionnement du texte

buttonrecommencer = tk.Button(fenetrevictoire, text= "Cliques ici pour recommencer", font = ("helvetica","30"), command = recommencer)#création boutton recommencer
buttonrecommencer.grid()
fenetrevictoire.mainloop() #lancement boucle principale



